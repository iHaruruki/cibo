<?xml version="1.0"?>
<robot name="cibo" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Color -->
  <material name="black">
      <color rgba="0.0 0.0 0.0 1"/>
  </material>

  <material name="grey">
      <color rgba="0.5 0.5 0.5 1"/>
  </material>

  <link name="base_link"/>

  <link name="pedestal_link">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.05"/>
      </geometry>
      <material name="black" />
    </visual>
  </link>

  <joint name="base_pedestal_joint" type="fixed">
    <parent link="base_link"/>
    <child link="pedestal_link"/>
    <origin xyz="0.0 0.0 0.025" rpy="0 0 0"/>
  </joint>

  <link name="vertical_bar_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.6"/>
      </geometry>
      <material name="black" />
    </visual>
  </link>

  <joint name="pedestal_vertical_joint" type="fixed">
    <parent link="pedestal_link"/>
    <child link="vertical_bar_link"/>
    <origin xyz="-0.1 0.0 0.3" rpy="0 0 0"/>
  </joint>

  <link name="horizontal_bar_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.4"/>
      </geometry>
      <material name="black" />
    </visual>
  </link>

  <joint name="vertical_horizontal_joint" type="fixed">
    <parent link="vertical_bar_link"/>
    <child link="horizontal_bar_link"/>
    <origin xyz="0.2 0.0 0.3" rpy="0 1.57 0"/>
  </joint>

  <!-- camera_01_link -->
  <link name="camera_01_link">
    <visual>
      <geometry>
        <box size="0.0123 0.0653 0.0225"/>
      </geometry>
      <material name="grey" />
    </visual>
  </link>

  <joint name="camera_01_joint" type="fixed">
    <parent link="vertical_bar_link"/>
    <child link="camera_01_link"/>
    <origin xyz="0.025 0.0 0.0" rpy="0 0 0"/>
  </joint>

  <!-- camera_02_link -->
  <link name="camera_02_link">
    <visual>
      <geometry>
        <box size="0.0123 0.0653 0.0225"/>
      </geometry>
      <material name="grey" />
    </visual>
  </link>

  <joint name="camera_02_joint" type="fixed">
    <parent link="horizontal_bar_link"/>
    <child link="camera_02_link"/>
    <origin xyz="0.025 0.0 0.2" rpy="0 1.57 0"/>
  </joint>

</robot>